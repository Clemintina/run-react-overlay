{
	"compilerOptions": {
		"jsx": "react",
		"allowJs": true,
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"pretty": true,
		"removeComments": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"paths": {
			"@assets/*": [
				"./assets/*"
			],
			"@components/*": [
				"./src/renderer/components/*"
			],
			"@common/*": [
				"./src/common/*"
			],
			"@main/*": [
				"./src/main/*"
			],
			"@renderer/*": [
				"./src/renderer/*"
			],
			"@src/*": [
				"./src/*"
			],
			"@misc/*": [
				"./misc/*"
			],
		}
	},
	"include": [
		"src/**/*",
		"tools/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
